@using ClienteBlogBlazorWASM.Modelos


@if(Post != null)
{
    
    <div class="card h-100 fade-in">
        <img class="card-img-top" alt="Post Image" src="@Post.ImagenUrl" />
        <div class="card-body border-top bg-light">
            <h5 class="card-title">@Post.Titulo</h5>
            <p class="card-text">
              
                <div>@Post.Descripcion</div>

            </p>
        </div>
        <div class="card-footer text-end">
            <button class="btn btn-primary" @onclick="() => OnBtnClick.InvokeAsync(Post.Id)">
                More Info
            </button>
        </div>
    </div>
}
else
{
    <div class="card h-100">
        <img class="card-img-top" alt="Movie Poster" src="/Imagenes/all-bong-L2oedF1AsH8-unsplash.jpg" />
        <div class="card-body border-top bg-light">
            <h5 class="card-title placeholder-glow">
                <span class="placeholder col-6"></span>
            </h5>
            <p class="card-text placeholder-glow">
                <span class="placeholder col-8"></span>
            </p>
        </div>
        <div class="card-footer text-end">
            <button class="btn btn-primary disabled placeholder col-6">
                More Info
            </button>
        </div>
    </div>




}

<style>
    .card-img-top {
        height: 180px; /* Ajusta según necesites */
        object-fit: cover;
    }

    .card-body {
        height: 150px; /* Ajusta según necesites */
        overflow: hidden;
    }

    .card-text {
        display: -webkit-box;
        -webkit-line-clamp: 3; /* Limita a 3 líneas, ajusta según necesites */
        -webkit-box-orient: vertical;
        overflow: hidden;
        text-overflow: ellipsis;
    }

    .card-footer {
        /* Estilos para el pie de la tarjeta, si es necesario */
    }
</style>


@code {


    [Parameter]
    public Post Post { get; set; }


    [Parameter]
    public EventCallback<int> OnBtnClick { get; set; }
}
