@using ClienteBlogBlazorWASM.Modelos


<div class="modal fade" tabindex="-1" id="movie-modal">
    <div class="modal-dialog modal-dialog-centered modal-xl">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                @if (PostDetails is null)
                {
                    <div class="h-100 d-flex flex-column gap-3 justify-content-center align-items-center">
                        <h3>Loading...</h3>
                        <div class="spinner-border" role="status">
                            <span class="visually-hidden">Loading...</span>
                        </div>
                    </div>
                }
                else
                {
                    <div class="row">
                        <div class="col-md-4 ">
                            <img class="img-fluid rounded shadow" id="modal-img"
                                 src="@PostDetails.ImagenUrl" />
                        </div>
                        <div class="col-md-8">
                            <h3 class="display-6 fw-bold mb-0">@PostDetails.Titulo</h3>
                            <!-- Opcional: Tagline si está disponible -->
                            <span class="lead">@PostDetails.Etiquetas</span>
                            <h5 class="lead fw-bold pt-3 mt-3 border-top">Descripcion</h5>
                            <div>@(new MarkupString(PostDetails.DescripcionHtml))</div>

                            
                            <!-- Detalles adicionales -->
                            <div class="row pt-3 mt-3 border-top">
                                <div class="col">
                                    <h6>Ratings</h6>
                                    <span>@PostDetails.FechaCreacion</span>
                                </div>
                                <div class="col">
                                    <h6>Release Date</h6>
                                    <span>@PostDetails.FechaActualizacion</span>
                                </div>
                                <div class="col">
                                    <h6>Budget</h6>
                                    <span>@PostDetails.Etiquetas</span>
                                </div>
                                @*  <div class="col">
                            <h6>Runtime</h6>
                            <span>@(MovieDetails.Runtime / 60) hour @(MovieDetails.Runtime % 60) minutes</span>
                            </div> *@
                            </div>
                        </div>

                    </div>
                }
            </div>
            <div class="modal-footer d-flex">
                <button type="button" class="btn btn-secondary me-auto" data-bs-dismiss="modal">Close</button>
                <!-- Opcional: Enlaces a IMDB o a la página de la película si están disponibles en tus datos -->
            </div>
        </div>






        <style>
            /* Estilos para el carrusel */
            .modal-content {
                background-color: papayawhip;
            }

            .modal-content {
                background-color: papayawhip;
            }

        </style>

    </div>


</div>


@code {


    [Parameter]
    public Post PostDetails { get; set; }


}
